# General settings
NODE_ENV=production     # Use 'production' when serving pre-built frontend files
PORT=4000                 # Port that Express will listen on

# MongoDB configuration (used by server.js)
MONGO_URI=mongodb://localhost:27017/nfl_cards
# Optional: max connection pool size for Mongoose
MONGO_MAX_POOL_SIZE=20

# JWT secret for authController.js:contentReference[oaicite:0]{index=0}
JWT_SECRET=super_secret_jwt_key

# Ball Don't Lie API (NFL) configuration:contentReference[oaicite:1]{index=1}
BALLDONTLIE_API_KEY=your_ball_dont_lie_key
BALLDONTLIE_NFL_BASE_URL=https://api.balldontlie.io/nfl/v1

# Auto-sync player/team data on server startup
SYNC_ON_STARTUP=false

# Optional: enable debug proxy (used only if you run debugProxy.js)
# These are NOT used by the main server, only by the debug proxy.
MONGODB_URI=mongodb://localhost:27017/nfl_cards  # debug proxy’s Mongo connection
MONGODB_DB=nfl_cards                             # debug proxy’s DB name
ACTIONS_API_KEY=my_debug_proxy_key               # auth key for GPT Actions
