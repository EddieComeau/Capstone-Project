{
  "name": "nfl-cards-server",
  "version": "1.0.0",
  "description": "NFL Cards backend â€” syncs BallDon'tLie NFL data (players, teams, games, stats, injuries, odds, plays) into MongoDB and computes derived metrics.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "health": "node -e \"console.log('ok')\"",
    "sync:players": "node scripts/testSync.js",
    "sync:teams": "node scripts/syncAllTeams.js",
    "sync:games": "node -r dotenv/config -e \"require('./services/syncService').syncGames({per_page:100}).then(console.log).catch(err=>{console.error(err);process.exit(1)})\"",
    "sync:stats": "node -e \"require('./services/syncService').syncStats({per_page:100}).then(console.log).catch(err=>{console.error(err);process.exit(1)})\"",
    "sync:standings": "node -e \"require('./services/derivedService').syncStandingsFromAPI({season:2024,per_page:100}).then(console.log).catch(err=>{console.error(err);process.exit(1)})\"",
    "sync:teamseason": "node -e \"require('./services/derivedService').syncTeamSeasonStats({season:2024,per_page:100}).then(console.log).catch(err=>{console.error(err);process.exit(1)})\"",
    "sync:advanced:rushing": "node -e \"require('./services/derivedService').syncAdvancedStatsEndpoint('rushing',{season:2024,per_page:100}).then(console.log).catch(err=>{console.error(err);process.exit(1)})\"",
    "sync:advanced:passing": "node -e \"require('./services/derivedService').syncAdvancedStatsEndpoint('passing',{season:2024,per_page:100}).then(console.log).catch(err=>{console.error(err);process.exit(1)})\"",
    "sync:advanced:receiving": "node -e \"require('./services/derivedService').syncAdvancedStatsEndpoint('receiving',{season:2024,per_page:100}).then(console.log).catch(err=>{console.error(err);process.exit(1)})\"",
    "sync:plays": "node -e \"require('./services/derivedService').syncPlays({per_page:100}).then(console.log).catch(err=>{console.error(err);process.exit(1)})\"",
    "sync:odds": "node -e \"require('./services/derivedService').syncOdds({per_page:100}).then(console.log).catch(err=>{console.error(err);process.exit(1)})\"",
    "sync:playerprops": "node -e \"console.error('Set GAME_ID in script or pass via script'); process.exit(1)\"",
    "sync:injuries": "node scripts/syncInjuries.js",
    "sync:data": "node scripts/syncAllData.js",
    "compute:derived": "node scripts/computeAllDerived.js",
    "compute:matchups": "node -e \"require('./services/derivedService').computeMatchups().then(()=>{console.log('done');process.exit(0)}).catch(err=>{console.error(err);process.exit(1)})\"",
    "compute:metrics": "node -e \"require('./services/derivedService').computeAdvancedStats().then(()=>{console.log('done');process.exit(0)}).catch(err=>{console.error(err);process.exit(1)})\"",
    "debug:proxy": "node ../debugProxy.js",
    "test": "echo \"No tests configured\" && exit 0"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "json2csv": "^6.0.0-alpha.2",
    "minimist": "^1.2.8",
    "mongoose": "^8.19.2",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "express-rate-limit": "^6.7.0",
    "zod": "^3.22.2",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "helmet": "^7.0.0",
    "mongodb": "^6.4.0",
    "express-validator": "^6.14.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "nfl",
    "balldontlie",
    "mongodb"
  ],
  "author": "Eddie Comeau",
  "license": "ISC"
}
